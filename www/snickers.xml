<?xml version="1.0" encoding="UTF-8" ?>

<Module>
	<ModulePrefs title="NLFlashBridge" height="470px" author_email="pieterm@dmc.be">
		<Require feature="opensocial-0.8" />
		<Require feature="flash" />
		<Require feature="views" />
		<Require feature="dynamic-height"/>
		
		<Locale messages="http://stream.microsite.be/netlog/messages.xml"/>
	</ModulePrefs>
	
	<Content type="html" view="canvas">
		<![CDATA[
		
		<script type="text/javascript" src="http://stream.microsite.be/netlog/assets/js/jquery-1.3.min.js"></script>
		<script type="text/javascript" src="http://stream.microsite.be/netlog/assets/js/nlFlashBridge.utils.js"></script>
		<script type="text/javascript" src="http://stream.microsite.be/netlog/assets/js/nlFlashBridge.js"></script>
		<script type="text/javascript" src="http://stream.microsite.be/netlog/assets/js/swfobject.js"></script>
		
		<script type="text/javascript">
		
			var flashvars = { };
			var params = { allowFullScreen : true, allowScriptAccess: "always" };
			var attributes = { id: "flash_flash" };
			
			swfobject.embedSWF("http://stream.microsite.be/netlog/assets/swf/NetlogFlashBridge.swf", "flash_alternative", "720", "470", "9.0.0", "http://stream.microsite.be/netlog/assets/swf/playerProductInstall.swf", flashvars, params, attributes);
	
		</script>	
		
		<div id="flash_alternative">
			Alternative
		</div>
					
		]]>
	</Content>
	
	<Content type="html" view="profile">
		<![CDATA[
		
		<script type="text/javascript" src="http://stream.microsite.be/netlog/assets/js/jquery-1.3.min.js"></script>
		<script type="text/javascript" src="http://stream.microsite.be/netlog/assets/js/nlFlashBridge.utils.js"></script>
		<script type="text/javascript" src="http://stream.microsite.be/netlog/assets/js/nlFlashBridge.js"></script>
		<script type="text/javascript" src="http://stream.microsite.be/netlog/assets/js/swfobject.js"></script>
		
		<script type="text/javascript">
		
			var flashvars = { };
			var params = { allowFullScreen : true, allowScriptAccess: "always" };
			var attributes = { id: "flash_flash" };
			
			// swfobject.embedSWF("http://stream.microsite.be/netlog/assets/swf/XXX.swf", "flash_alternative", "340", "440", "9.0.0", "http://stream.microsite.be/netlog/assets/swf/playerProductInstall.swf", flashvars, params, attributes);
	
		</script>	
		
		<div id="flash_alternative">
			Alternative
		</div>
					
		]]>
	</Content>
</Module>